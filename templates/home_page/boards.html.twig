{% extends 'base.html.twig' %}
    {% block title %} Boards {% endblock %}
{% block body %}
    <h1>{{ users }} Boards </h1>
    <a class="btn btn-primary" href="/create-board" role="button">Add new board</a>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <table class="table table-striped table-bordered" style="width: 60%; margin: 0 auto;">
        <tr>
            <th scope="col" style="width: 10%;">No</th>
            <th scope="col" style="width: 30%;">owner</th>
            <th scope="col" style="width: 60%;">title</th>
        </tr>
        {% for board in boards %}
            {#<tr data-href="/tasks/{board.id}" style="cursor:pointer;">#}
            <td><a href="/board/{{ board.id }}">{{ board.id }}</a></td>
            <td>{% for user in board.users %} {{ user }} {% endfor %}</td>
            <td>{{ board.name }}</td>

            </tr>
        {% endfor %}
    </table>

{% endblock %}