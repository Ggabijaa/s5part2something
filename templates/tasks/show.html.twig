{% extends 'base.html.twig' %}
{% block body %}
    {% block title %} <h1>{{ board.name }}</h1>{% endblock %}
    <a class="btn btn-primary" href="/edit-board/{{board.id}}" role="button">Edit board</a>
    <a class="btn btn-primary" href="/{{board.id}}/create-task" role="button">Add new task</a>
{% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <table class="table table-striped table-bordered" style="width: 60%; margin: 0 auto;">
        <tr>
            <th scope="col" style="width: 10%;">id</th>
            <th scope="col" style="width: 20%;">category</th>
            <th scope="col" style="width: 10%;">owner</th>
            <th scope="col" style="width: 50%;">title</th>
            <th scope="col" style="width: 30%;">status</th>
            <th scope="col" colspan="2" style="width: 10%;">actions</th>
        </tr>
        {% for task in board.tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.category }}</td>
                <td>{{ task.owner }}</td>
                <td>{{ task.title }}</td>
                <td>{{ task.status }}</td>
                <td><a href="/delete-task/{{ task.id }}"> delete</a></td>
                <td><a href="/edit-task/{{ task.id }}"> edit</a></td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}